<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/cart_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/rv_order_image_detail"
            android:layout_width="127dp"
            android:layout_height="150dp"
            android:src="@drawable/oppo_logo" />

        <LinearLayout
            android:id="@+id/cart_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/rv_order_image_detail"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_product_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"

                android:text="IPHONE 14 PRO MAX"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_product_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="20dp"
                android:text="2000 $"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />





        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/cart_quantity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>