<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp">

        <ImageView
            android:id="@+id/rv_order_image"
            android:layout_width="127dp"
            android:layout_height="150dp"
            android:src="@drawable/oppo_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/rv_order_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"

                android:text="IPHONE 14 PRO MAX"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="20dp"
                android:text="2000 $"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/primary"
                android:text="Xem chi tiáº¿t"

                android:textColor="@color/secondary" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>