<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/cart_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp">

        <ImageView
            android:id="@+id/rv_order_image"
            android:layout_width="127dp"
            android:layout_height="150dp"
            android:src="@drawable/oppo_logo" />

        <LinearLayout
            android:id="@+id/cart_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/rv_order_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"

                android:text="IPHONE 14 PRO MAX"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="20dp"
                android:text="2000 $"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cart_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/red"
                android:text="XÃ³a"
                android:textColor="@color/secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/quantity_up"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/arrow_up" />

            <TextView
                android:id="@+id/cart_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/quantity_down"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/arrow_down" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>